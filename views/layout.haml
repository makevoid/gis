!!! 5
%html
  - TITLE = "GIS"
  %head
    %title= TITLE
    %link{ rel: "stylesheet", href: "/css/main.css" }
    = partial :metas
    :javascript
      var data_name = "#{@data_name}"
      var fields = [ #{FIELDS2.map{ |f| "'#{f}'" }.join(", ")} ]
  %body
    #container
      %header
        %h1
          %a{ href: "https://github.com/makevoid/gis" }= TITLE
        %nav
          - LOCATIONS.each do |key, val|
            %a{ href: "/#{key}" }= key.capitalize

          - FIELDS2.each do |field|
            %a{ href: "/a?#{field}" }= field.to_s.capitalize.gsub(/_/, ' ')

      %section.content= yield
    %script{ type: "text/javascript", src: "/js/vendor/underscore.js" }
    %script{ type: "text/javascript", src: "/js/vendor/zepto.js" }
    %script{ type: "text/javascript", src: "http://maps.google.com/maps/api/js?sensor=false" }
    %script{ type: "text/javascript", src: "/js/app.js" }
